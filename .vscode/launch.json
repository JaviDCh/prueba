{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Meteor: Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}", 
            "sourceMaps": true
        },
        {
            "name": "Meteor: Node",
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["run", "debug"],
            "port": 9229,
            "timeout": 30000, 
            "sourceMaps": true,
            "cwd": "${workspaceRoot}/",
            "runtimeExecutable": "${workspaceRoot}/.meteor/local/dev_bundle/bin/npm",
            "restart": true,
            "stopOnEntry": false,
            "protocol": "inspector",
        }
    ],
    "compounds": [
        {
            "name": "Meteor: All",
            "configurations": ["Meteor: Node", "Meteor: Chrome"]
        }
    ]
}