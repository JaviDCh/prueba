
{
  "compilerOptions": {
    "target": "es6", 
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": false,
    "strictNullChecks": true, 
    "baseUrl": "."
  },
  "include": [
    "client/**/*",
    "globals/**/*",
    "imports/**/*",
    "models/**/*",
    "public/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    ".meteor",
    ".vscode", 
    "typings.d.ts/**/*"
  ]
}
